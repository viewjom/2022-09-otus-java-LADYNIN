<configuration scan="true" scanPeriod="10 seconds">
    <jmxConfigurator/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="APP_LOG" class="ch.qos.logback.core.FileAppender">
        <file>logs/mainService.log</file>
        <encoder>
            <pattern>%date %level [%thread] [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="ru.otus.controllers.ClientController" level="info" additivity="true">
        <appender-ref ref="APP_LOG"/>

    </logger>
    <logger name="ru.otus.crm.service.DbServiceClientImpl" level="info" additivity="true">
        <appender-ref ref="APP_LOG"/>
    </logger>
    <logger name="ru.otus.cachehw.MyCache" level="info" additivity="true">
        <appender-ref ref="APP_LOG"/>
    </logger>
    <logger name="ru.otus.rabbitmq.RabbitMqListeners" level="info" additivity="true">
        <appender-ref ref="APP_LOG"/>
    </logger>
    <logger name="ru.otus.kafka.DataSender" level="info" additivity="true">
        <appender-ref ref="APP_LOG"/>
    </logger>
    <logger name="ru.otus.crm.service.KladrServiceClientImpl" level="info" additivity="true">
        <appender-ref ref="APP_LOG"/>
    </logger>
    <logger name="ru.otus.crm.service.RabbitMqServiceImpl" level="info" additivity="true">
        <appender-ref ref="APP_LOG"/>
    </logger>
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>